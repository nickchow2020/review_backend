{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "username": "shuminzhou",
            "password": "shuminzhou",
            "first_name": "shumin",
            "last_name": "zhou",
            "email": "smz1234@gmail.com",
            "is_admin": false,
            "avatar_url": "amazon.com/asdf"
        }
    ],
    "required": [
        "username",
        "password",
        "first_name",
        "last_name",
        "email",
        "is_admin",
        "avatar_url"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "minLength":1,
            "maxLength": 30,
            "title": "The username schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "shuminzhou"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "minLength":1,
            "maxLength": 20,
            "title": "The password schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "shuminzhou"
            ]
        },
        "first_name": {
            "$id": "#/properties/first_name",
            "type": "string",
            "title": "The first_name schema",
            "minLength":1,
            "maxLength": 30,
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "shumin"
            ]
        },
        "last_name": {
            "$id": "#/properties/last_name",
            "type": "string",
            "minLength":1,
            "maxLength": 30,
            "title": "The last_name schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "zhou"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "minLength":6,
            "maxLength": 60,
            "title": "The email schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "smz1234@gmail.com"
            ]
        },
        "is_admin": {
            "$id": "#/properties/is_admin",
            "type": "boolean",
            "title": "The is_admin schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false,
            "examples": [
                false
            ]
        },
        "avatar_url": {
            "$id": "#/properties/avatar_url",
            "type": "string",
            "title": "The avatar_url schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "amazon.com/asdf"
            ]
        }
    },
    "additionalProperties": true
}